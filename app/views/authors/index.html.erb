<h1>All Authors</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th></th>
  </tr>
 
  <% @author.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
    </tr>
  <% end %>
</table>